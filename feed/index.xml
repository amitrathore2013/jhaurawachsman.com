---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.constants.name }}</title>
  <subtitle>{{ site.constants.tagline }}</subtitle>
  <link href="{{ site.url }}{{ site.baseurl }}/feed/" rel="self"/>
  <link href="{{ site.url }}{{ site.baseurl }}/"/>
  <rights>{{ site.constants.domain | capitalize }} is licensed under a Creative Commons Attribution-NonCommercial-ShareAlike 3.0 Unported License.</rights>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/</id>

  <author>
    <name>{{ site.constants.name }}</name>
    <email>{{ site.constants.email }}</email>
    <uri>{{ site.url }}{{ site.baseurl }}/about/</uri>
  </author>

  <icon>{{ site.url }}{{ site.baseurl }}/favicon.ico</icon>
  <logo>{{ site.url }}{{ site.baseurl }}{{ site.baseimg }}rss-logo.png</logo>

  {% for post in site.posts %}
    <entry>
      <author>
        <name>{% if post.author.name %}{{ post.author.name }}{% else %}{{ site.constants.author.name }}{% endif %}</name>
        <uri>http://{% if post.author.domain %}{{ post.author.domain }}{% else %}{{ site.constants.author.domain }}{% endif %}/</uri>
      </author>
      <title>{{ post.title }}</title>
      <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>
      {% if post.img.url %}<logo>{{ site.url }}{{ site.baseurl }}{{ site.baseimg }}{{ post.img.url }}</logo>{% endif %}
      <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
  {% endfor %}
</feed>
