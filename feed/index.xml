---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.constants.name }}</title>
  <subtitle>{{ site.constants.tagline }}</subtitle>
  <link href="{{ '/feed/' | to_absurl }}" rel="self"/>
  <link href="{{ '/' | to_absurl }}"/>
  <rights>{{ site.constants.domain | capitalize }} is licensed under GPL 3. All Rights Reserved.</rights>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ '/' | to_absurl }}</id>

  <author>
    <name>{{ site.constants.name }}</name>
    <email>{{ site.constants.email }}</email>
    <uri>{{ '/about/' | to_absurl }}</uri>
  </author>

  <icon>{{ '/favicon.ico' | to_absurl }}</icon>
  <logo>{{ '/img/rss-logo.png' | to_absurl }}</logo>

  {% for post in site.posts %}
    <entry>
      <author>
        <name>{% if post.author.name %}{{ post.author.name }}{% else %}{{ site.constants.author.name }}{% endif %}</name>
        <uri>http://{% if post.author.domain %}{{ post.author.domain }}{% else %}{{ site.constants.author.domain }}{% endif %}/</uri>
      </author>
      <title>{{ post.title }}</title>
      <link href="{{ post.url | to_absurl }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ post.id | to_absurl }}</id>
      {% if post.img.url %}<logo>{{ post.img.url | to_absurl }}</logo>{% endif %}
      <content type="html">{{ post.content | sub_absurl | xml_escape }}</content>
    </entry>
  {% endfor %}
</feed>
